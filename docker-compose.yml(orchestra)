version: '3.8'

services:
  # Frontend
  mobile:
    build: ./client/mobile
    ports: 
      - "8081:8081"
    depends_on:
      - gateway

  web:
    build: ./client/web
    ports:
      - "3000:3000"
    environment:
      - REACT_APP_API_URL=http://localhost:4000

  admin:
    build: ./client/admin
    ports:
      - "3001:3000"

  # Gateway
  gateway:
    build: ./gateway
    ports:
      - "4000:4000"
    environment:
      - NODE_ENV=development

  # Microservices
  auth-service:
    build: ./services/auth-service
    environment:
      - MONGODB_URI=mongodb://mongo:27017/sparkly
      - JWT_SECRET=change-this-in-prod

  profile-service:
    build: ./services/profile-service

  match-service:
    build: ./services/match-service

  chat-service:
    build: ./services/chat-service

  billing-service:
    build: ./services/billing-service

  ai-service:
    build: ./ai-engine/matching-engine
    ports:
      - "8000:8000"

  # Data
  mongo:
    image: mongo:6
    ports: 
      - "27017:27017"
    volumes:
      - mongo_data:/data/db

  redis:
    image: redis:7
    ports:
      - "6379:6379"

  minio:
    image: minio/minio
    command: server /data --console-address :9001
    environment:
      - MINIO_ROOT_USER=minioadmin
      - MINIO_ROOT_PASSWORD=minioadmin
    ports:
      - "9000:9000"
      - "9001:9001"

volumes:
  mongo_data: